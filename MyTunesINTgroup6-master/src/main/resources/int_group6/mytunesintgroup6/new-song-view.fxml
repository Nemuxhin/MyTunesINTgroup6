<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #2b2b2b;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="int_group6.mytunesintgroup6.gui.NewSongController">
    <children>
        <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="New Song" />

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label style="-fx-text-fill: white;" text="Title:" prefWidth="60.0"/>
                    <TextField fx:id="txtTitle" prefWidth="250.0" promptText="Enter Title" />
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label style="-fx-text-fill: white;" text="Artist:" prefWidth="60.0"/>
                    <TextField fx:id="txtArtist" prefWidth="250.0" promptText="Enter Artist" />
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label style="-fx-text-fill: white;" text="Category:" prefWidth="60.0"/>
                    <ComboBox fx:id="cmbCategory" prefWidth="150.0" promptText="Select..." />
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label style="-fx-text-fill: white;" text="Time:" prefWidth="60.0"/>
                    <TextField fx:id="txtTime" prefWidth="100.0" promptText="Length" />
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label style="-fx-text-fill: white;" text="File:" prefWidth="60.0"/>
                    <TextField fx:id="txtFile" prefWidth="180.0" promptText="path/to/file.mp3" />
                    <Button fx:id="btnChoose" text="Choose..." />
                </HBox>

                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <padding><Insets top="10"/></padding>
                    <Button fx:id="btnCancel" text="Cancel" />
                    <Button fx:id="btnSave" style="-fx-background-color: #4a90e2; -fx-text-fill: white;" text="Save" />
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>