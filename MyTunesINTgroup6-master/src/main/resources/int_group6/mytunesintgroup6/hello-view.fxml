<BorderPane fx:controller="int_group6.mytunesintgroup6.gui.HelloController"
            prefHeight="700.0" prefWidth="1050.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: linear-gradient(to bottom, #2b2b2b, #1e1e1e); -fx-font-family: 'Segoe UI', sans-serif;">

    <top>
        <HBox spacing="20.0" BorderPane.alignment="CENTER" style="-fx-border-color: #3c3c3c; -fx-border-width: 0 0 1 0; -fx-padding: 15;">

            <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label fx:id="lblCurrentTime" text="0:00" style="-fx-text-fill: #aaaaaa; -fx-font-size: 11;"/>
                    <Slider fx:id="songSlider" HBox.hgrow="ALWAYS" style="-fx-cursor: hand;"/>
                    <Label fx:id="lblTotalTime" text="0:00" style="-fx-text-fill: #aaaaaa; -fx-font-size: 11;"/>
                </HBox>

                <HBox spacing="12.0" alignment="CENTER_LEFT">
                    <Button fx:id="btnRewind" text="â®" prefWidth="35" prefHeight="35"
                            style="-fx-background-radius: 50; -fx-background-color: #383838; -fx-text-fill: white; -fx-cursor: hand;"/>

                    <HBox spacing="5.0">
                        <Button fx:id="btnPlay" text="â–¶" prefWidth="45" prefHeight="45"
                                style="-fx-background-radius: 50; -fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-size: 18; -fx-cursor: hand;"/>
                        <Button fx:id="btnPause" text="â¸" prefWidth="45" prefHeight="45"
                                style="-fx-background-radius: 50; -fx-background-color: #383838; -fx-text-fill: white; -fx-font-size: 14; -fx-cursor: hand;"/>
                        <Button fx:id="btnStop" text="â¹" prefWidth="45" prefHeight="45"
                                style="-fx-background-radius: 50; -fx-background-color: #383838; -fx-text-fill: white; -fx-font-size: 14; -fx-cursor: hand;"/>
                    </HBox>

                    <Button fx:id="btnFastForward" text="â­" prefWidth="35" prefHeight="35"
                            style="-fx-background-radius: 50; -fx-background-color: #383838; -fx-text-fill: white; -fx-cursor: hand;"/>

                    <Region prefWidth="15.0" />

                    <HBox alignment="CENTER" spacing="5">
                        <Label text="ðŸ”Š" style="-fx-text-fill: #aaaaaa; -fx-font-size: 14;"/>
                        <Slider fx:id="volumeSlider" max="100" value="50" prefWidth="100" style="-fx-cursor: hand;"/>
                    </HBox>

                    <Label fx:id="lblNowPlaying" text="Ready to Play..."
                           style="-fx-text-fill: #e0e0e0; -fx-font-size: 14; -fx-font-weight: bold; -fx-padding: 0 0 0 15;"/>
                </HBox>
            </VBox>

            <HBox spacing="10.0" alignment="CENTER_RIGHT">
                <Label text="ðŸ”" style="-fx-text-fill: #888888; -fx-font-size: 16;"/>
                <TextField fx:id="txtFilter" promptText="Search songs..."
                           prefWidth="200"
                           style="-fx-background-color: #333333; -fx-text-fill: white; -fx-prompt-text-fill: #888888; -fx-background-radius: 15; -fx-padding: 8;"/>
                <Button fx:id="btnFilterClear" text="Clear"
                        style="-fx-background-radius: 15; -fx-background-color: #444444; -fx-text-fill: white; -fx-cursor: hand;"/>
            </HBox>
        </HBox>
    </top>

    <center>
        <HBox spacing="15.0" style="-fx-padding: 15;">

            <VBox spacing="8.0" prefWidth="250.0" HBox.hgrow="SOMETIMES">
                <Label text="MY PLAYLISTS" style="-fx-text-fill: #666666; -fx-font-size: 12; -fx-font-weight: bold;"/>
                <TableView fx:id="tblPlaylists" VBox.vgrow="ALWAYS"
                           style="-fx-background-color: #252525; -fx-base: #252525; -fx-control-inner-background: #252525;">
                    <columns>
                        <TableColumn fx:id="colPlaylistName" text="Name" prefWidth="230.0"/>
                    </columns>
                </TableView>
            </VBox>

            <VBox spacing="8.0" prefWidth="350.0" HBox.hgrow="ALWAYS">
                <Label text="CURRENT PLAYLIST SONGS" style="-fx-text-fill: #666666; -fx-font-size: 12; -fx-font-weight: bold;"/>
                <TableView fx:id="tblSongsInPlaylist" VBox.vgrow="ALWAYS"
                           style="-fx-background-color: #252525; -fx-base: #252525; -fx-control-inner-background: #252525;">
                    <columns>
                        <TableColumn fx:id="colPlSongTitle" text="Title" prefWidth="140.0"/>
                        <TableColumn fx:id="colPlSongArtist" text="Artist" prefWidth="100.0"/>
                        <TableColumn fx:id="colPlSongCategory" text="Cat" prefWidth="60.0"/>
                        <TableColumn fx:id="colPlSongTime" text="Time" prefWidth="50.0"/>
                    </columns>
                </TableView>
            </VBox>

            <VBox spacing="8.0" prefWidth="400.0" HBox.hgrow="ALWAYS">
                <Label text="LIBRARY" style="-fx-text-fill: #666666; -fx-font-size: 12; -fx-font-weight: bold;"/>
                <TableView fx:id="tblSongs" VBox.vgrow="ALWAYS"
                           style="-fx-background-color: #252525; -fx-base: #252525; -fx-control-inner-background: #252525;">
                    <columns>
                        <TableColumn fx:id="colTitle" text="Title" prefWidth="150.0">
                            <cellValueFactory><PropertyValueFactory property="title"/></cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colArtist" text="Artist" prefWidth="110.0">
                            <cellValueFactory><PropertyValueFactory property="artist"/></cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colCategory" text="Category" prefWidth="70.0">
                            <cellValueFactory><PropertyValueFactory property="category"/></cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colTime" text="Time" prefWidth="60.0">
                            <cellValueFactory><PropertyValueFactory property="time"/></cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 0 0 15 0;">

            <WebView fx:id="youtubeView" prefHeight="300" prefWidth="300"
                     opacity="0.0" visible="true" managed="true"/>

            <HBox spacing="20.0" alignment="CENTER" style="-fx-padding: 15; -fx-background-color: #222222; -fx-border-color: #333333; -fx-border-width: 1 0 0 0; -fx-pref-width: 100%;">

                <HBox spacing="8.0">
                    <Button fx:id="btnNewPlaylist" text="New" style="-fx-base: #444444; -fx-text-fill: white;"/>
                    <Button fx:id="btnEditPlaylist" text="Edit" style="-fx-base: #444444; -fx-text-fill: white;"/>
                    <Button fx:id="btnDeletePlaylist" text="Delete" style="-fx-base: #444444; -fx-text-fill: white;"/>
                </HBox>

                <Region HBox.hgrow="ALWAYS"/>

                <HBox spacing="8.0" alignment="CENTER">
                    <Button fx:id="btnAddToPlaylist" text="Add âž¡" style="-fx-base: #3a6ea5; -fx-text-fill: white; -fx-font-weight: bold;"/>
                    <Button fx:id="btnRemoveFromPlaylist" text="â¬… Remove" style="-fx-base: #444444; -fx-text-fill: white;"/>
                    <Region prefWidth="10"/>
