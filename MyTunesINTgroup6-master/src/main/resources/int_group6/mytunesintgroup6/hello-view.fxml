                    <Button fx:id="btnMoveDown" text="â–¼" style="-fx-base: #444444; -fx-text-fill: white;"/>
                </HBox>

                <Region HBox.hgrow="ALWAYS"/>

                <HBox spacing="8.0">
                    <Button fx:id="btnNewSong" text="New" style="-fx-base: #444444; -fx-text-fill: white;"/>
                    <Button fx:id="btnEditSong" text="Edit" style="-fx-base: #444444; -fx-text-fill: white;"/>
                    <Button fx:id="btnDeleteSong" text="Delete" style="-fx-base: #444444; -fx-text-fill: white;"/>
                    <Region prefWidth="10"/>
                    <Button fx:id="btnClose" text="Close" style="-fx-background-color: #a63a3a; -fx-text-fill: white; -fx-font-weight: bold;"/>
                </HBox>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>