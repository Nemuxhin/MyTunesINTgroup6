<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Slider?>


<BorderPane fx:controller="int_group6.mytunesintgroup6.gui.HelloController"
            prefHeight="600.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: #2b2b2b; -fx-padding: 10;">

    <top>
        <HBox spacing="15.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label fx:id="lblCurrentTime" text="0:00" style="-fx-text-fill: #cccccc; -fx-font-size: 10;"/>
                    <Slider fx:id="songSlider" HBox.hgrow="ALWAYS" />
                    <Label fx:id="lblTotalTime" text="0:00" style="-fx-text-fill: #cccccc; -fx-font-size: 10;"/>
                </HBox>

                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <Button text="⏮" prefWidth="30" style="-fx-background-radius: 20; -fx-background-color: #4a4a4a; -fx-text-fill: white;"/>

                    <Button fx:id="btnPlay" text="▶" prefWidth="40"
                            style="-fx-background-radius: 20; -fx-background-color: #4a4a4a; -fx-text-fill: white;"/>
                    <Button fx:id="btnPause" text="⏸" prefWidth="40"
                            style="-fx-background-radius: 20; -fx-background-color: #4a4a4a; -fx-text-fill: white;"/>
                    <Button fx:id="btnStop" text="⏹" prefWidth="40"
                            style="-fx-background-radius: 20; -fx-background-color: #4a4a4a; -fx-text-fill: white;"/>

                    <Button text="⏭" prefWidth="30" style="-fx-background-radius: 20; -fx-background-color: #4a4a4a; -fx-text-fill: white;"/>

                    <Label fx:id="lblNowPlaying" text="(none) ... is playing"
                           style="-fx-text-fill: #e0e0e0; -fx-font-size: 14; -fx-padding: 0 0 0 15;"/>
                </HBox>
            </VBox>

            <Region prefWidth="20.0" />

            <HBox spacing="10.0" alignment="CENTER_RIGHT">
                <Label text="Filter:"
                       style="-fx-text-fill: #e0e0e0; -fx-font-size: 13;"/>
                <TextField fx:id="txtFilter" promptText="Title or artist"
                           prefWidth="180"
                           style="-fx-background-color: #3a3a3a; -fx-text-fill: white; -fx-prompt-text-fill: #aaaaaa;"/>
                <Button fx:id="btnFilterClear" text="Clear"
                        style="-fx-background-radius: 6; -fx-background-color: #4a4a4a; -fx-text-fill: white;"/>
            </HBox>
        </HBox>
    </top>

    <!-- CENTER: Three main tables -->
    <center>
        <HBox spacing="10.0">
            <padding>
                <Insets top="5" right="10" bottom="5" left="10"/>
            </padding>

            <!-- Playlists panel -->
            <VBox spacing="5.0" prefWidth="220.0">
                <Label text="Playlists"
                       style="-fx-text-fill: #f0f0f0; -fx-font-size: 14; -fx-font-weight: bold;"/>
                <TableView fx:id="tblPlaylists" prefHeight="400.0" prefWidth="380.0"
                           style="-fx-background-color: #3a3a3a; -fx-control-inner-background: #3a3a3a; -fx-base: #3a3a3a;">
                <columns>
                        <TableColumn fx:id="colPlaylistName" text="Name" prefWidth="200.0"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Songs on playlist panel -->
            <VBox spacing="5.0" prefWidth="380.0">
                <Label text="Songs in playlist"
                       style="-fx-text-fill: #f0f0f0; -fx-font-size: 14; -fx-font-weight: bold;"/>
                <TableView fx:id="tblSongsInPlaylist" prefHeight="400.0" prefWidth="380.0"
                           style="-fx-background-color: #3a3a3a; -fx-control-inner-background: #3a3a3a; -fx-base: #3a3a3a;">
                    <columns>
                        <TableColumn fx:id="colPlSongTitle" text="Title" prefWidth="150.0"/>
                        <TableColumn fx:id="colPlSongArtist" text="Artist" prefWidth="120.0"/>
                        <TableColumn fx:id="colPlSongCategory" text="Category" prefWidth="80.0"/>
                        <TableColumn fx:id="colPlSongTime" text="Time" prefWidth="60.0"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- All songs panel -->
            <VBox spacing="5.0" prefWidth="380.0">
                <Label text="All songs"
                       style="-fx-text-fill: #f0f0f0; -fx-font-size: 14; -fx-font-weight: bold;"/>
                <TableView fx:id="tblSongs" prefHeight="400.0" prefWidth="380.0"
                           style="-fx-background-color: #3a3a3a; -fx-control-inner-background: #3a3a3a; -fx-base: #3a3a3a;">
                    <columns>
                        <TableColumn fx:id="colTitle" text="Title" prefWidth="160.0">
                            <cellValueFactory>
                                <PropertyValueFactory property="title"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colArtist" text="Artist" prefWidth="120.0">
                            <cellValueFactory>
                                <PropertyValueFactory property="artist"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colCategory" text="Category" prefWidth="80.0">
                            <cellValueFactory>
                                <PropertyValueFactory property="category"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colTime" text="Time" prefWidth="60.0">
                            <cellValueFactory>
                                <PropertyValueFactory property="time"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colFilePath" text="File path" prefWidth="220.0">
                            <cellValueFactory>
                                <PropertyValueFactory property="filePath"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </VBox>
        </HBox>
    </center>

    <!-- BOTTOM: Action buttons -->
    <bottom>
        <HBox spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Playlist buttons -->
            <HBox spacing="8.0">
                <Button fx:id="btnNewPlaylist" text="New Playlist"
                        style="-fx-background-radius: 6; -fx-background-color: #4a4a4a; -fx-text-fill: white;"/>
                <Button fx:id="btnEditPlaylist" text="Edit Playlist"
                        style="-fx-background-radius: 6; -fx-background-color: #4a4a4a; -fx-text-fill: white;"/>
                <Button fx:id="btnDeletePlaylist" text="Delete Playlist"
                        style="-fx-background-radius: 6; -fx-background-color: #4a4a4a; -fx-text-fill: white;"/>
            </HBox>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- Songs in playlist buttons -->
            <HBox spacing="8.0">
                <Button fx:id="btnAddToPlaylist" text="Add →"
                        style="-fx-background-radius: 6; -fx-background-color: #4a4a4a; -fx-text-fill: white;"/>
                <Button fx:id="btnMoveUp" text="Move Up"
                        style="-fx-background-radius: 6; -fx-background-color: #4a4a4a; -fx-text-fill: white;"/>
                <Button fx:id="btnMoveDown" text="Move Down"
                        style="-fx-background-radius: 6; -fx-background-color: #4a4a4a; -fx-text-fill: white;"/>
                <Button fx:id="btnRemoveFromPlaylist" text="Remove"
                        style="-fx-background-radius: 6; -fx-background-color: #4a4a4a; -fx-text-fill: white;"/>
            </HBox>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- Song buttons -->
            <HBox spacing="8.0">
                <Button fx:id="btnNewSong" text="New Song"
                        style="-fx-background-radius: 6; -fx-background-color: #4a4a4a; -fx-text-fill: white;"/>
                <Button fx:id="btnEditSong" text="Edit Song"
                        style="-fx-background-radius: 6; -fx-background-color: #4a4a4a; -fx-text-fill: white;"/>
                <Button fx:id="btnDeleteSong" text="Delete Song"
                        style="-fx-background-radius: 6; -fx-background-color: #4a4a4a; -fx-text-fill: white;"/>
                <Button fx:id="btnClose" text="Close"
                        style="-fx-background-radius: 6; -fx-background-color: #7a3b3b; -fx-text-fill: white;"/>
            </HBox>
        </HBox>
    </bottom>

</BorderPane>
